<div class='container'>
<div class='col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4'>
<br>
<%=image_tag("apoyar.png", class: 'img-responsive')%>
<form class="form-fp" action='reset_password' method='post'>
    
    <div class="form-group">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <h2 class="form-signin-heading text-center"></h2>
        <br>
    </div>
    
    <div class="form-group">
        <label for="inputEmail" class="sr-only">Email</label>
        <input name='email' type="email" id="inputEmail" class="form-control" placeholder="Your Email" required>
        <br>
    </div>
    <%if flash[:error]%>
      <div class="alert alert-danger alert-dismissible fade in" role="alert"> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        <p><%=flash[:error]%></p>
      </div>
    <%end%>
    <%if flash[:notice]%>
      <div class="alert alert-success alert-dismissible fade in" role="alert"> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        <p><%=flash[:notice]%></p>
      </div>
    <%end%>
    <div class='text-center'><button class="btn btn-block btn-primary" type="submit">Send me my password</button></div>
    <br>
    <center><a id='forgot_password' href='login'>Back to login</a></center>
    <br>
</form>
<br>
</div>
</div>