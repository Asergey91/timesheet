<div class='container'>
<div class='col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4'>
<br>
<%=image_tag("apoyar.png", class: 'img-responsive')%>
<form class="form-signin" action='login' method='post'>
    
    <div class="form-group">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <h2 class="form-signin-heading text-center"></h2>
        <br>
    </div>
    
    <div class="form-group">
        <label for="inputHandle" class="sr-only">Handle</label>
        <input name='user[handle]' type="text" id="inputHandle" class="form-control" placeholder="Handle" required>
        <br>
    </div>
    
    <div class="form-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <input name='user[password]' type="password" id="inputPassword" class="form-control" placeholder="Password" required>
    </div>
    <br>
    <%if flash[:error]%>
      <div class="alert alert-danger alert-dismissible fade in" role="alert"> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <p><%=flash[:error]%></p>
      </div>
    <%end%>
    <div class='text-center'><button class="btn btn-block btn-primary" type="submit">Sign-in</button></div>
    <center>
    <br>
        <label class="checkbox" for="checkbox1" style='display: inline;'>
          <input type="checkbox" name='user[remember_me]' data-toggle='checkbox' id="checkbox1" value='true'> Remember me
        </label>
    <br><br>
        <a id='forgot_password' href='forgot_password'>Forgot your password/handle?</a>
    </center>
</form>
<br>
</div>
</div>